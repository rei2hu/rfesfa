{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "jest": true
  },
  "extends": ["airbnb-base", "prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "no-restricted-syntax": ["error", "WithStatement"],
    "no-continue": "off",
    "guard-for-in": "off",
    "no-bitwise": "off",
    "no-nested-ternary": "off",
    "no-plusplus": "off",
    "prefer-promise-reject-errors": "off",
    "no-case-declarations": "off"
  }
}
